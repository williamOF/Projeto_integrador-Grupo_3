<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %> 
    <link rel="stylesheet" href="/stylesheets/usuario-perfil.css">
</head>
<body>

    <%- include('partials/header') %> 

    <main class="container">
        <div class="box-perfil">
            <div class="side-left col-4">
                <div class="avatar-usuario col-8" >
                    <img src="/images/users/<%= user.user_avatar %> " alt="avatar-usuario" class="avatar">
                    <h2><%= user.username %> </h2>
                    <div style="display: none ;">
                        <a href="/user/perfil/admin" class="btn btn-warning">Pagina do administrador</a>
                    </div>
                </div>
                <div>
                    <ul class="nav flex-column menu">
                        <li><a class="nav-link btn btn-info carrinho" href="#">Carrinho</a></li>
                        <li><a class="nav-link btn btn-info pedidos" href="#">Pedido</a></li>
                        <li><a class="nav-link btn btn-info perfil-info" href="#">usuario Info</a></li>
                    </ul>
                </div>
                <div class="box-space"></div>
            </div>
            <div class="side-right col-8 ">
                <div class="box-pedidos">
                    <div class="pedidos-titulo">
                        <h2>Todos os Pedidos</h2>
                    </div>
                    <div class="pedidos-list">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>NÂ°</th>
                                    <th>Livro</th>
                                    <th>Pagamento</th>
                                    <th>Valor</th>
                                    <th>Entrega</th>
                                </tr>
                                <tbody>
                                    <% if(locals.approvedCart) {%>
                                        <% approvedCart.forEach(element => {%>
                                            <tr>
                                                <td><%= element.id_cart %></td>
                                                <td><%= element.books.title %></td>
                                                <td><%= element.status_payment %></td>
                                                <td><%= element.request_price %></td>
                                                <td><%= element.status_delivery %></td>
                                                
                                            </tr>
                                        <%});%> 
                                    <% } %>  
                                </tbody>
                            </thead>
                        </table>
                    </div>
                </div>
                <div id="box-info" class="none col-12"><%- include('partials/user/painel-info') %></div>
                <div id="box-carrinho" class="none col-12"><%- include('partials/user/painel-carrinho') %></div>
            </div>
        </div>
    </main>
    <%- include('partials/footer') %> 
    <script src="/js/app.js"></script>
</body>
</html>