<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %> 
    <link rel="stylesheet" href="/stylesheets/cart.css">
</head>
<body>
    <%- include('partials/header') %> 
    <main class="container bg-light ">
        
        <div>
            <div>
                <h2 class="text-center p-3">carrinho</h2>
                    <% if(typeof produtos !== 'undefined') {%>
                        <div class="row flex-center ">
                            <% for(let p of produtos) {%>
                                <div class="col-8 flex-center p-2 m-2 border">
                                    <div class="col-4">
                                        <img class="w-100" src="<%= p.capa %> " alt="capa-livro<%= p.titulo %> ">
                                    </div>
                                    <div class="container" >
                                        <div class="flex-center flex-column">
                                            <h2><%= p.titulo %> </h2>
                                            <p>Editora: <%=p.editora %> </p>
                                            <p>Em Estoque: <%= p.estoque %> unidades </p>
                                            <p>para presente:
                                                <input type="checkbox" name="para_presente" value="">
                                            </p>
                                            <p>Quantidade selecionada
                                                <input type="number"name="qtd_livro" min="1" class="bt-number" value="<%= p.qtd_incart%>">
                                            </p>  
                                            <span>valor da unidade: 
                                                <%= toThousand(p.preco[0]) %>R$ 
                                            </span>     
                                            <div>
                                                <a href="#" class="btn btn-warning mt-2">remover</a>
                                            </div>           
                                        </div>
                                    </div>
                                </div>
                            <% } %> 
                        </div>
                
                    <% }else{%>
                        <div class=" d-flex border m-2">
                            <div style="height: 200px;" class="w-100 pb-1 d-flex align-items-center justify-content-center">
                                <div class="p-2 border">
                                    <a class="link btn btn-info" href="/biblioteca">Adicione livros ao carrinho</a>    
                                </div>
                            </div>
                        </div>
                    <% } %> 
               
            </div>
            <div class="row flex-center">
                <% if(typeof produtos !== 'undefined') {%>
                    <div class="innerPrice flex-center ">
                        <div class="border p-5 text-center">
                            <h2>finalize a compra</h2>
                            <p>valor total: <%= toThousand(price) %> R$</p>
                            <a href="/finalizar" class="btn btn-info">comprar</a>
                            <a class="btn btn-info" href="/biblioteca">adicionar mais</a>
                        </div>
                    </div> 
                <% }%>
            </div>
        </div>
        <div class="mt-5 mb-5"></div>
        <div class="container border">
            <div class="row">
                
                <div><h2 class="text-center p-3">destaques do dia</h2></div>
                <% for(let d of destaque) {%>
                    <div class="col-4 col-sm col-lg border">
                        <a href="/showbook/<%= d.id %> ">
                            <img class="w-100" src="<%= d.capa %> " alt="Capa livro <%= d.title %> ">    
                        </a>
                    </div>
                <% } %> 
            </div>
        </div>

    </main>

    <%- include('partials/footer') %> 
</body>
</html>