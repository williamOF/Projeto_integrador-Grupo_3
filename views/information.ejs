<!DOCTYPE html>
<html lang="pt-br">
<head>
    <%- include('partials/head') %> 
</head>
<body>
    <%- include('partials/header') %> 

    <main class="container">
        <div class="bg-light p-5">
            <form action="/user/perfil/information" method="post">
                <div class="error text-center p-3">
                    <h5><%= locals.error ? error.msg : '' %></h5>
                </div>
                <div class="row box-info-forms ">
                    <input type="hidden" name="fk_id_user" value="<%= admin.id_user %> ">
                    <div class="col-12">
                     <form action="/user/perfil" method="post" class="border p-2 m-2">
                         <div>
                             <h2>Dados pessoais</h2>
                         </div>
                         <div class="form-group mb-3">
                             <input type="text" value="<%= locals.oldData ? oldData.full_name : ''  %>" name="full_name" id="name" placeholder="<%= locals.info ? info.full_name :'Nome completo' %>"  class="form-control">
                             <% if(locals.errors && errors.full_name) {%>
                                 <span class="error"><%= errors.full_name.msg %> </span>
                             <% } %> 
                         </div>
                         <div class="form-group mb-3">
                             <input type="email" value="<%= locals.oldData ? oldData.email : '' %>" name="email" id="email" placeholder="<%= locals.info ? info.email :'Email contato' %>"  class="form-control">
                             <% if(locals.errors && errors.email) {%>
                                 <span class="error"><%= errors.email.msg %> </span>
                             <% } %> 
                         </div>
                         <div class="form-group mb-3">
                             <input type="tel" value="<%= locals.oldData ? oldData.telephone: '' %>" name="telephone" id="tel" placeholder="<%= locals.info ? info.telephone:'Telefone' %>"  class="form-control">
                             <% if(locals.errors && errors.telephone) {%>
                                <span class="error"><%= errors.telephone.msg %> </span>
                            <% } %> 
                         </div>
                         <div class="form-group mb-3">
                             <label for="age">Data de Nascimento</label><br>
                             <input type="date" value="<%= locals.oldData ? oldData.birth_date : '' %>" name="birth_date" id="age"  class="form-control">
                             <% if(locals.errors && errors.birth_date) {%>
                                <span class="error"><%= errors.birth_date.msg %> </span>
                            <% } %> 
                         </div>
                         <div class="form-group mb-3">
                             <input type="text" value="<%= locals.oldData ? oldData.user_cpf : '' %>" name="user_cpf" id="cpf" placeholder="<%= locals.info ? info.user_cpf :'Digite seu CPF' %>"  class="form-control">
                             <% if(locals.errors && errors.user_cpf) {%>
                                <span class="error"><%= errors.user_cpf.msg %> </span>
                            <% } %> 
                         </div>
                         <div class="form-group mb-3">
                            <input type="text" value="<%= locals.oldData ? oldData.user_rg :'' %>" name="user_rg" id="user_rg" placeholder="<%= locals.info ? info.user_rg:'rg' %> " class="form-control">
                            <% if(locals.errors && errors.user_rg) {%>
                            <span class="error"><%= errors.user_rg.msg %></span>
                        <% } %> 
                        </div>
                         <div>
                             <h2>Endereço</h2>
                         </div>
                         
                        <div class="form-group mb-3">
                            <input type="text" class="form-control" value="<%= locals.oldData ? oldData.cep :''%>" id="cep" name="cep" placeholder="CEP: 00000-000">
                            <small>
                                <% if(locals.errors && errors.cep) {%>
                                    <span class="error"><%= errors.cep.msg %> </span>
                                <% } %> 
                            </small>
                        </div>
                        <div class="form-group mb-3">
                            <input type="text" class="form-control" value="<%= locals.oldData ? oldData.road :'' %>" id="logradouro" name="road" placeholder="Rua.">
                            <small>
                                <% if(locals.errors && errors.road) {%>
                                    <span class="error"><%= errors.road.msg %></span>
                                <% } %> 
                            </small>
                        </div>
                        <div class="form-group mb-3">
                            <input type="text" class="form-control" value="<%= locals.oldData ? oldData.number :'' %>" id="numero" name="number" placeholder="N° Rua.">
                            <small>
                                <% if(locals.errors && errors.number) {%>
                                    <span class="error"><%= errors.number.msg %></span>
                                <% } %> 
                            </small>
                        </div>
                        <div class="form-group mb-3">
                            <input type="text" class="form-control" value="<%= locals.oldData ? oldData.district :'' %>" id="bairro"  name="district" placeholder="Bairro">
                            <small>
                                <% if(locals.errors && errors.district){%>
                                    <span class="error"><%= errors.district.msg %></span>
                                <% } %> 
                            </small>
                        </div>
                        <div class="form-group mb-3">
                            <input type="text" class="form-control" value="<%= locals.oldData ? oldData.city :''%>" id="localidade" name="city" placeholder="Cidade">
                            <small>
                                <% if(locals.errors && errors.city) {%>
                                    <span class="error"><%= errors.city.msg %></span>
                                <% } %>
                            </small>
                        </div>
                         <div class="form-group mb-3">
                            <input type="text" class="form-control" value="<%= locals.info ? info.state : '' %>" id="uf" name="state" placeholder="Estado">
                            <small>
                                <% if(locals.errors && errors.city) {%>
                                    <span class="error"><%= errors.city.msg %></span>
                                <% } %>
                            </small>
                        </div>
                        <div class="form-group mb-3">
                            <input type="text" class="form-control" value="<%= locals.oldData ? oldData.complements : '' %>" id="complemento" name="complements" placeholder="complemento">
                            <small>
                                <% if(locals.errors && errors.complements) {%>
                                    <span class="error"><%= errors.complements.msg %></span>
                                <% } %> 
                            </small>
                        </div>
                       
                         <button class="btn btn-light border">Salvar</button>
                     </form>
                    </div>
                 </div>
            </form>
        </div>
    </main>
    <script src="/js/info.js"></script>
    <%- include('partials/footer') %> 
</body>
</html>