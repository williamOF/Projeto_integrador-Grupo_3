<div class="row box-info-forms ">
   <div class="col-12">
    <form action="/user/perfil" method="post" class="border p-2 m-2">
        <div>
            <h2>Dados pessoais</h2>
        </div>
        <div class="form-group mb-3">
            <input type="text" value="<%= info ? info[0].dataValues.full_name : '' %>" name="full_name" id="name" placeholder="Nome completo"  class="form-control">
        </div>
        <div class="form-group mb-3">
            <input type="email" value="<%= info ? info[0].dataValues.email : '' %>" name="email" id="email" placeholder="Email contato"  class="form-control">
        </div>
        <div class="form-group mb-3">
            <input type="tel" value="<%= info ? info[0].dataValues.telephone : '' %>" name="telephone" id="tel" placeholder="Telefone"  class="form-control">
        </div>
        <div class="form-group mb-3">
            <label for="age">Data de Nascimento</label><br>
            <input type="date" value="<%= info ? info[0].dataValues.birth_date : '' %>" name="birth_date" id="age"  class="form-control">
        </div>
        <div class="form-group mb-3">
            <input type="text" value="<%= info[0].dataValues.cpf ? '***********' : '' %>" name="user_cpf" id="cpf" placeholder="Digite seu CPF"  class="form-control">
        </div>
        <div>
            <h2>Endereço</h2>
        </div>
        <div class="form-group mb-3">
            <select  type="text" value="<%= info ? info[0].dataValues.state : '' %>" name="state" id="state" class="form-control">
                <option disabled >Selecione um Estado</option>
                <option value="SP">São Paulo</option>
                <option value="AL">Alagoas</option>
                <option value="BA">Bahia</option>
                <option value="CE">Ceará</option>
                <option value="ES">Espírito Santo</option>
                <option value="MT">Mato Grosso</option>
                <option value="MG">Minas Gerais</option>
                <option value="RJ">Rio de Janeiro</option>
                <option value="RN">Rio Grande do Norte</option>
                <option value="TO">Tocantins</option>
                <option value="DF">Distrito Federa</option>
            </select>
        </div>
        <div class="form-group mb-3">
            <input type="text" value="<%= info ? info[0].dataValues.city : '' %>" name="city" id="city" placeholder="Cidade:" class="form-control">
        </div>
        <div class="form-group mb-3">
            <input type="text" value="<%= info ? info[0].dataValues.district : '' %>" name="district" id="district" placeholder="Bairro:" class="form-control">
        </div>
        <div class="form-group mb-3">
            <input type="text" value="<%= info ? info[0].dataValues.road : '' %>" name="road" id="road" placeholder="Rua:" class="form-control">
        </div>
        <div class="form-group mb-3">
            <input type="text" value="<%= info ? info[0].dataValues.complements : '' %>" name="complements" id="complements" placeholder="Complemento:" class="form-control">
        </div>
        <button class="btn btn-light border">Salvar</button>
    </form>
   </div>
  
   <div class="col-12">
    <form action="#" class="border p-2 m-2">
        <div>
            <h2>cartões</h2>
        </div>
        <div class="form-group mb-3">
            <input type="text" name="number" id="number" placeholder="Número" class="form-control">
        </div>
        <div class="form-group mb-3">
            <input type="text" name="name" id="name" placeholder="Nome impresso" class="form-control">
        </div>
        <div class="form-group mb-3">
            <input type="number" min="0" name="cv" id="cv" placeholder="CV" class="form-control">
        </div>
        <div class="form-group mb-3">
            <label for="val-thru" class="p-1">Validade</label><br>
            <input type="text" name="val-thru" id="val-thru" class="form-control">
        </div>
        <button class="btn btn-light  border">adicionar</button>
    </form>
   </div>
</div>