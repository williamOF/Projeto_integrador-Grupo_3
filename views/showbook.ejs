<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %> 
</head>
<body>
    <%- include('partials/header') %>
    <main class="container bg-light mt-3">
        <% let p = book %> 
        <div class="border-bottom">
            <div class="d-flex">
                <div class="d-flex">
                    <div class="col-4">
                        <img src="<%= p.capa %> " alt="" class="img-thumbnail " >
                    </div>
                    <div class="text-center col-8 flex-column justify-content-center align-items-center row p-2 m-2">
                        <h2><%= p.titulo %> </h2>
                        <span><%= p.autor %> </span>
                        <p><%= p.sinopse %> </p>
                        <div class="text-start">
                            <span><%= p.idioma %> </span>
                        </div>
                        <div class="d-flex">
                            <div class="border col-4 m-1">
                               <h3>Kindle</h3>
                               <p><%= p.preco[0] %> </p>
                            </div>
                            <div class="border col-4 m-1">
                                <% if(p.preco[2] || p.preco[3] == !undefined) {%>
                                    <h3>capa comum</h3>
                                    <p><%= p.preco[1] %> </p>
                                <% } %> 
                            </div>
                            <div class="border col-4 m-1">
                                <% if(p.preco[2] || p.preco[3] == !undefined) {%>
                                    <h3>diversos</h3>
                                    <p><%= p.preco[2] %></p>
                                <% } %> 
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-4 m-5 p-2 border">
                    <form action="#">
                        <span>Comprar: <%= p.preco[1] %></span>
                        <div class="p-2 m-1">
                            <% if(p.estoque > 0) {%>
                                <p class="btn-danger">Em estoque</p>
                            <% }else {%>
                                <p>Indisponível</p>
                            <% } %>  
                        </div>
                        <div class="d-flex">
                            <div class="m-2">
                                <button class="btn-danger" type="submit" value="carrinho">Adcionar ao carrinho</button>
                            </div>
                            <div class="m-2">
                                <button type="submit" value="comprar">Compre agora</button>
                            </div>
                        </div> 

                    </form>
                </div> 

            </div>
            <div class="d-flex container justify-content-center align-items-center col-8 mb-5">
                <div class="border m-2 p-2 col-2">
                    <span>Número de páginas</span>
                    <p><%= p.paginas %> </p>
                </div>
                <div class="border m-2 p-2 col-2">
                    <span>Idioma</span>
                    <p><%= p.idioma %></p>
                </div>
                <div class="border m-2 p-2 col-2">
                    <span>Edição</span>
                    <p><%= p.ediçao %></p>
                </div>
                <div class="border m-2 p-2 col-2">
                    <span>Editora</span>
                    <p><%= p.editora %></p>
                </div>
                <div class="border m-2 p-2 col-2">
                    <span>Data de publicação</span>
                    <p><%= p.dataPublicado %></p>
                </div>
                <div class="border m-2 p-2 col-2">
                    <span>Dimensões</span>
                    <p><%= p.dimensao %></p>
                </div>
                
        
            </div>

        </div>
        <div class="text-center mt-5">
            <h2>veja também</h2>
        </div>
        <div class="container">
            <div class="d-flex mt-5">
                <% for(let p of destaque) {%>
                    <div class="col-3">
                        <a href="/showbook/<%= p.id %> ">
                            <div class="container col-11">
                                <img src="<%= p.capa %>" class="img-thumbnail" alt="">
                            </div>
                        </a>
                    </div>
                <% } %> 
            </div>
        </div>

        </div>
    </main> 

    <%- include('partials/footer') %> 
</body>
</html>